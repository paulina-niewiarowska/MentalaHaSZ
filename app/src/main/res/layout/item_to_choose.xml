<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary_button_etc"
        >
        <TextView
            android:id="@+id/text_view_item_to_choose_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="ItemToChoose"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/text_view_item_to_choose_dating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Dating"
            android:gravity="center"
            android:layout_below="@+id/text_view_item_to_choose_name"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>