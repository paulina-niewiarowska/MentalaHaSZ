<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MentalaHaSZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_button_etc</item>
        <item name="colorPrimaryVariant">@color/primary_button_etc</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/background_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_button_etc</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
    </style>




    <style name="TriviaDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">#D7AC8A36</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="HaSZErrorDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">#B1846C</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="HaSZDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">#BABABA</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/gradient_buttons</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--        <item name="android:background">@drawable/gradient_background</item>-->
        <item name="colorControlNormal">@color/grey</item>
        <!--        <item name="android:textColorPrimary">@color/green_to_check</item>-->
        <item name="android:background">@color/darg_gold</item>
        <item name="android:textColorPrimary">@color/grey</item>

    </style>
</resources>