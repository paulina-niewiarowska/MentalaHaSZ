<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pniew.mentalahasz">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MentalaHaSZ">
        <activity android:name=".funfacts.TriviaCenterActivity"></activity>
        <activity
            android:name=".thelistofthings.ListOfThingsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".themainmenu.MainActivity" />
        <activity
            android:name=".thelistofthings.addeditthings.AddEditThingActivity"
            android:parentActivityName=".thelistofthings.ListOfThingsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".thegallery.gallery.PictureGalleryActivity"
            android:parentActivityName=".thegallery.choosing.ChooseActivity" />
        <activity
            android:name=".thegallery.choosing.ChooseActivity"
            android:parentActivityName=".themainmenu.MainActivity" />
        <activity
            android:name=".thetest.TestActivity"
            android:parentActivityName=".themainmenu.MainActivity" />
        <activity
            android:name=".picture_showeditaddtest.LearnShowAddActivity"
            android:parentActivityName=".thegallery.gallery.PictureGalleryActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".themainmenu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>